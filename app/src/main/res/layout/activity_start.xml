<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_logo_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_start_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <com.xuexiang.xui.widget.progress.HorizontalProgressView
            android:id="@+id/hor_pro_view_sl"
            android:layout_width="206dp"
            android:layout_height="10dp"
            app:hpv_end_progress="99"
            app:hpv_isTracked="true"
            app:hpv_progress_textVisibility="false"
            app:hpv_start_color="@color/hor_pro_bar_start"
            app:hpv_end_color="@color/hor_pro_bar_end"
            app:hpv_track_color="@color/hor_pro_bg"
            app:hpv_track_width="5dp"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_logo_sl" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
